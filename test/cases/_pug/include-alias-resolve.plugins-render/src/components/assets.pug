style.
  .a1 { border: 4px solid red; }
  .a2 { border: 4px solid mediumvioletred; }
  .a3 { border: 4px solid blueviolet; }
  .b1 { border: 4px solid greenyellow; }
  .b2 { border: 4px solid green; }
  .b3 { border: 4px solid mediumseagreen; }
  .c1 { border: 4px solid lightskyblue; }
  .c2 { border: 4px solid dodgerblue; }
  .c3 { border: 4px solid royalblue; }
  .d1 { border: 4px solid orange; }
  .d2 { border: 4px solid goldenrod; }
  .d3 { border: 4px solid gold; }

img.a1(src=require('../assets/images/image.webp'))
img.a2(src=require('AliasImages/image.webp'))
img.a3(src=require('@images/image.webp'))

- var file = 'image.webp'
img.b1(src=require('../assets/images/' + file))
img.b2(src=require('AliasImages/' + file))
img.b3(src=require('@images/' + file))

- var file = './image.webp'
img.c1(src=require('../assets/images/' + file))
img.c2(src=require('AliasImages/' + file))
img.c3(src=require('@images/' + file))

- var file = '../images/image.webp'
img.d1(src=require('../assets/images/' + file))
img.d2(src=require('AliasImages/' + file))
img.d3(src=require('@images/' + file))

- var colors = require('@data/colors.json')
.colors
  each color in colors
    div(style=`color:${color.hex};`)= color.name
