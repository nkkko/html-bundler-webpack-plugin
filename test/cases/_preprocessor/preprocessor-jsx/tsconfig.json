{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2016",
    "jsx": "react-jsx", // to avoid the ERROR: 'React' refers to a UMD global, but the current file is a module
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noImplicitAny": true
  }
}
